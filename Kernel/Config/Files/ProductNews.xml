    <ConfigItem Name="Daemon::SchedulerCronTaskManager::Task###ProductNews" Required="0" Valid="1">
        <Description Translatable="1">Invalidate product news.</Description>
        <Group>Daemon</Group>
        <SubGroup>Daemon::SchedulerCronTaskManager::Task</SubGroup>
        <Setting>
            <Hash>
                <Item Key="TaskName">InvalidateProductNews</Item>
                <Item Key="Schedule">*/5 * * * *</Item> <!-- default: every 10 minutes -->
                <Item Key="Module">Kernel::System::Console::Command::Maint::ProductNews::Invalidate</Item>
                <Item Key="Function">Execute</Item>
                <Item Key="MaximumParallelInstances">1</Item>
                <Item Key="Params">
                    <Array>
                    </Array>
                </Item>
            </Hash>
        </Setting>
    </ConfigItem>
